{
  "name": "d3fc",
  "version": "1.0.0",
  "description": "A collection of components that make it easy to build interactive charts with D3",
  "main": "build/d3fc.js",
  "scripts": {
    "bundle": "d3fc-scripts bundle --include-d3fc && copyfiles build/d3fc.js site/dist",
    "test": "d3fc-scripts test",
    "site": "npm-run-all site:clean site:build site:copy bundle && npm-run-all -p site:styles:compile site:styles:watch site:server",
    "site:styles:compile": "node-sass site/src/style/styles.scss site/dist/styles.css",
    "site:styles:watch": "node-sass site/src/style/styles.scss site/dist/styles.css -w",
    "site:copy": "copyfiles -f site/src/images/* site/dist/images && copyfiles -f node_modules/d3/build/d3.min.js site/dist/lib && copyfiles -f node_modules/jquery/dist/jquery.min.js site/dist/lib && copyfiles -f node_modules/bootstrap-sass/assets/javascripts/bootstrap.min.js site/dist/lib",
    "site:build": "babel-node site/scripts/build.js",
    "site:clean": "rimraf site/dist && mkdirp site/dist",
    "site:server": "npm-run-all -p site:start-server site:livereload",
    "site:livereload": "livereload site/dist -d",
    "site:start-server": "http-server site/dist -p 8000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d3fc/d3fc.git"
  },
  "keywords": [
    "d3",
    "financial",
    "components",
    "charts"
  ],
  "author": "Ali Sheehan-Dare <alisd23@live.co.uk>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/d3fc/d3fc/issues"
  },
  "homepage": "https://github.com/d3fc/d3fc#readme",
  "dependencies": {
    "d3": "^4.3.0",
    "d3fc-annotation": "^1.0.3",
    "d3fc-axis": "^1.0.1",
    "d3fc-chart": "^1.0.1",
    "d3fc-data-join": "^3.0.5",
    "d3fc-discontinuous-scale": "^2.0.0",
    "d3fc-element": "^3.0.0",
    "d3fc-extent": "^2.2.0",
    "d3fc-financial-feed": "^2.0.0",
    "d3fc-group": "^1.0.0",
    "d3fc-label-layout": "^5.0.1",
    "d3fc-pointer": "^1.0.2",
    "d3fc-random-data": "^1.0.0",
    "d3fc-rebind": "^4.0.1",
    "d3fc-sample": "^3.0.1",
    "d3fc-series": "^1.2.0",
    "d3fc-shape": "^4.0.0",
    "d3fc-technical-indicator": "^6.0.0",
    "highlight.js": "^9.8.0",
    "node-sass": "^3.11.1",
    "tiny-ssg": "github:colineberhardt/tiny-ssg#v0.0.6"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-preset-stage-2": "^6.16.0",
    "bootstrap-sass": "^3.3.7",
    "change-case": "^3.0.0",
    "copyfiles": "^1.0.0",
    "d3fc-scripts": "^1.2.1",
    "bootstrap-sass": "^3.3.7",
    "fs-promise": "^1.0.0",
    "glob": "^7.0.5",
    "gray-matter": "^2.0.2",
    "handlebars": "^4.0.5",
    "handlebars-helpers": "^0.7.5",
    "highlight.js": "^9.1.0",
    "html-entities": "^1.2.0",
    "http-server": "^0.9.0",
    "js-yaml": "^3.6.1",
    "livereload": "^0.6.0",
    "marked": "^0.3.5",
    "node-sass": "^3.8.0",
    "npm-run-all": "^3.1.1",
    "rimraf": "^2.5.4",
    "tiny-ssg": "ColinEberhardt/tiny-ssg#v0.0.6"
  }
}
