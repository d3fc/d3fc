---
layout: default
---

<div class="container content">
  <div class="col-sm-9">
    <!-- LEVEL 1 -->
    {{#each structure}}
      <div class="section">
        <h{{level}}>
          {{title}}
          {{#if shouldLinkToGH }}
            <a class="btn btn-default" href="https://github.com/d3fc/{{title}}">View on GitHub</a>
          {{/if}}
        </h{{level}}>
        {{#markdown this}}
{{{content}}}
        {{/markdown}}
        <!-- LEVEL 2 -->
        {{#each children}}
          <div class="block">
            <h{{level}} class="header">
{{title}}
            </h{{level}}>
            {{#markdown this}}
{{{content}}}
            {{/markdown}}
            <!-- LEVEL 3 -->
            {{#each children}}
              <div class="block">
                <h{{level}} class="header">
                  <a id="{{paramcase title}}" href="#{{paramcase title}}" class="header-link">
                    <svg viewBox="0 0 16 16">
                      <path d="M4 9h1v1H4c-1.5 0-3-1.69-3-3.5S2.55 3 4 3h4c1.45 0 3 1.69 3 3.5 0 1.41-.91 2.72-2 3.25V8.59c.58-.45 1-1.27 1-2.09C10 5.22 8.98 4 8 4H4c-.98 0-2 1.22-2 2.5S3 9 4 9zm9-3h-1v1h1c1 0 2 1.22 2 2.5S13.98 12 13 12H9c-.98 0-2-1.22-2-2.5 0-.83.42-1.64 1-2.09V6.25c-1.09.53-2 1.84-2 3.25C6 11.31 7.55 13 9 13h4c1.45 0 3-1.69 3-3.5S14.5 6 13 6z"></path>
                    </svg>
                  </a>
{{title}}
                </h{{level}}>
                {{#markdown this}}
{{{content}}}
                {{/markdown}}
              </div>
            {{/each}}
            <!-- /LEVEL 3 -->
          </div>
        {{/each}}
        <!-- /LEVEL 2 -->
      </div>
    {{/each}}
    <!-- /LEVEL 1 -->

    <p class="edit-page-block">Found a problem in this page? <a href="https://github.com/d3fc/{{structure.0.title}}/blob/master/README.md" target+"_blank">Submit a fix!</a></p>
  </div>

  <nav class="col-sm-3 hidden-xs nav-container">
    <ul class="nav nav-stacked fixed nav-sidebar">
      {{#each api}}
        <li>
          {{#eq ../name name }}
            <span class="active">{{title}}</span>
            <ul class="nav nav-stacked">
              {{#each sidebarContents}}
                <li>
                  <a href="#{{id}}">
                    {{title}}
                  </a>
                </li>
              {{/each}}
            </ul>
          {{else}}
            <a href="{{baseurl}}/api/{{name}}.html">{{title}}</a>
          {{/eq}}
        </li>
      {{/each}}
    </ul>
  </nav>
</div>
